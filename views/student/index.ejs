<!doctype html>
<html lang="en">
<%- include('../partials/head', { title: 'Data Student' }) %>

  <body>
    <%- include('../partials/navbar') %>
      <br>
      <br>
      <br>

      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            
            <center>
              <h1>Data Student</h1>
              <a href="/student/add" class="btn btn-primary">Add Student</a>
            </center>
            <br>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">First Name</th>
                  <th scope="col">Last Name</th>
                  <th scope="col">Email</th>
                  <th scope="col">Actions</th>
                  <th scope="col">Options</th>
                </tr>
              </thead>
              <tbody>
                <% data.forEach(data => { %>
                  <tr>
                    <td><%= data.id %></td>
                    <td><%= data.first_name %></td>
                    <td><%= data.last_name %></td>
                    <td><%= data.email %></td>
                    <td>
                      <a href="/students/<%= data.id %>/add-subject" class="btn btn-primary btn-sm">Add Subject</a>
                    </td>
                    <td>
                      <a href="/student/edit/<%= data.id %>" class="btn btn-primary btn-sm">Edit</a>
                      <a href="/student/delete/<%= data.id %>" class="btn btn-primary btn-sm">Delete</a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>

          </div>
        </div>
      </div>

      <%- include('../partials/script') %>
  </body>

</html>